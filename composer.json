{
    "name": "digbang/files",
    "description": "File handling library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Cruz Falcon",
            "email": "jfalcon@digbang.com"
        },
        {
            "name": "Dar√≠o Govergun",
            "email": "dgovergun@digbang.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ramsey/uuid": "^4.1",
        "laravel-doctrine/orm": "^1.7",
        "laravel-doctrine/fluent": "^1.1",
        "intervention/image": "^2.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.7",
        "phpunit/phpunit": "^6.1",
        "mockery/mockery": "^0.9.9"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Files\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Files\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "./vendor/bin/phpunit",
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ]
    }
}
